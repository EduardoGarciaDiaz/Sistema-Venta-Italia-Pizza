<UserControl x:Class="ItaliaPizza_Cliente.Recursos.ControlesUsuario.ElementoReceta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItaliaPizza_Cliente.Recursos.ControlesUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="175" d:DesignWidth="145" Margin="5">

    <Viewbox Height="175" Width="145" >
        <Grid Cursor="Hand" Height="175" Width="145" Tag="" MouseLeftButtonDown="GridReceta_Click">
            <Rectangle Fill="#FFFFFF" RadiusX="10" RadiusY="10"/>
            <Image x:Name="imgFotoProductoReceta" Height="107" Width="107" VerticalAlignment="Top"  Source="/Recursos/Iconos/imagen_pizza.png" Margin="19,7,19,0"/>
            <Label x:Name="lbNombreReceta" Content="Pizza clásica" Margin="0,114,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="29" FontSize="15" FontWeight="SemiBold" />
            <Image x:Name="imgIconoModificarReceta" Width="24" Height="24" VerticalAlignment="Top" Source="/Recursos/Iconos/icono_modificar.png" Margin="60,144,61,0" Cursor="Arrow" MouseLeftButtonDown="ImgEditar_Click"/>
        </Grid>
    </Viewbox>

</UserControl>
