<UserControl x:Class="ItaliaPizza_Cliente.Recursos.ControlesUsuario.ElementoInsumoReceta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItaliaPizza_Cliente.Recursos.ControlesUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300" Margin="0 5 0 0">
    <Grid>
        <Rectangle Height="40" Width="300" Fill="#F6F6F6" RadiusX="10" RadiusY="10"></Rectangle>
        <Label x:Name="lblNombreInsumo" Content="Pepperoni" FontSize="18" HorizontalAlignment="Left" Margin="5 0 0 0" VerticalAlignment="Center" Width="207" VerticalContentAlignment="Center" FontFamily="Inter" FontWeight="SemiBold"/>
        <Label x:Name="lblCantidadInsumo" Content="10" FontSize="18"  VerticalAlignment="Center" VerticalContentAlignment="Center" FontFamily="Inter" FontWeight="SemiBold" Margin="191,0,39,0" Foreground="#FF6C6C6C" HorizontalContentAlignment="Right"/>
        <Label x:Name="lblUnidadMedidaInsumo" Content="Kg" FontSize="18"  VerticalAlignment="Center" VerticalContentAlignment="Center" FontFamily="Inter" FontWeight="Bold" Margin="258,0,0,0" Foreground="#FF6C6C6C" HorizontalAlignment="Left" Width="42"/>
    </Grid>
</UserControl>
