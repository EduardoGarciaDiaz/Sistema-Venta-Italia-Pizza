<UserControl x:Class="ItaliaPizza_Cliente.Recursos.ControlesUsuario.ElementoInsumoRegistroReceta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItaliaPizza_Cliente.Recursos.ControlesUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="270" Margin="5 5 0 0">

    <Viewbox Height="50" Width="270">
        <Grid Height="50" Width="270" Cursor="Hand" MouseLeftButtonDown="GrdInsumoRegistroReceta_Click">
            <Rectangle x:Name="rectangleInsumoRegistro" Height="50" Width="270" Fill="#F6F6F6" RadiusX="20" RadiusY="20" Visibility="Visible" IsEnabled="True"/>
            <Label Content="Código:" Margin="10 2 0 0" FontWeight="SemiBold"/>
            <Label x:Name="lblCodigo" Content="111333" Margin="55 2 0 0"/>
            <Label Content="Categoría:" Margin="135,2,0,0" FontWeight="SemiBold"/>
            <Label x:Name="lblCategoria" Content="Cereales" Margin="196,2,0,0" Background="#00000000" HorizontalAlignment="Left" Width="74"/>
            <Label Content="Nombre:" Margin="10 22 0 0" FontWeight="SemiBold"/>
            <Label x:Name="lblNombre" Content="Cereales" Margin="60 22 0 0"/>
        </Grid>
    </Viewbox>
</UserControl>
