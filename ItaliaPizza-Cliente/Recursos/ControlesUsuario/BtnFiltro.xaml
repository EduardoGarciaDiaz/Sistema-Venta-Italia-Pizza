<UserControl x:Class="ItaliaPizza_Cliente.Recursos.ControlesUsuario.BtnFiltro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItaliaPizza_Cliente.Recursos.ControlesUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="35" >

    <UserControl.Resources>
        <DataTemplate x:Key="BtnFiltroContentTemplate">
            <TextBlock Text="{Binding}" FontWeight="Medium" FontSize="16"/>
        </DataTemplate>
    </UserControl.Resources>

    <Button x:Name="btnFiltro" Content="Todas" Padding="5" Foreground="#656565" FontWeight="Medium" FontSize="16" Height="35" Margin="5 0 0 0" Background="White" BorderBrush="White" Click="BtnFiltro_Click" >
        <Button.Style>
            <Style TargetType="{x:Type Button}" >
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Style.Resources>
            </Style>
        </Button.Style>
    </Button>

</UserControl>
