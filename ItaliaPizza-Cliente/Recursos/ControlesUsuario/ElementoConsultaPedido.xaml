        <Label Content="03/marzo/2024" Margin="459,12,19,56" HorizontalContentAlignment="Right" FontFamily="Segoe UI Semibold" Foreground="#FF606060" FontSize="18"/>
        <Label Content="En proceso" Background="#d6b400" Margin="557,56,25,11" HorizontalContentAlignment="Center" FontSize="16" Foreground="White">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
