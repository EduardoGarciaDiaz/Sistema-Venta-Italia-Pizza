<UserControl x:Class="ItaliaPizza_Cliente.Recursos.ControlesUsuario.BarraBusqueda"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItaliaPizza_Cliente.Recursos.ControlesUsuario"
             mc:Ignorable="d" d:DesignWidth="550" Height="47">

    <Grid>
        <TextBox Margin="0,0,60,0" BorderThickness="0,0,0,0">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        
        <Image Source="/Recursos/Iconos/icono_buscar.png" Margin="506,4,8,2"></Image>
    </Grid>
</UserControl>
