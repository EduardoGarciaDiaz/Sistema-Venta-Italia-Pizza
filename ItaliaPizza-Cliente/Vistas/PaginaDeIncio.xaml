<Page x:Class="ItaliaPizza_Cliente.Vistas.PaginaDeIncio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliaPizza_Cliente.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300" Background="#F6F6F6"
      Title="PaginaDeIncio">

    <Viewbox >
        <Grid Height="800" Width="1300">
            <Grid.Background>
                <ImageBrush ImageSource="/Recursos/Iconos/icono_fondo.png"/>
            </Grid.Background>
            <TextBox Text="Bienvenido" Background="Yellow" BorderBrush="Black" BorderThickness="5" HorizontalContentAlignment="Center" TextWrapping="Wrap"   FontSize="32" Margin="407,359,391,388" RenderTransformOrigin="0.5,0.5">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

      


        </Grid>

    </Viewbox>
</Page>
